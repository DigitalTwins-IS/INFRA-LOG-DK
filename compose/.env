# =========================================================================
# CONFIGURACIÓN COMPLETA DEL SISTEMA DIGITAL TWINS
# Copiar este archivo a .env y ajustar valores
# =========================================================================

# -------------------------------------------------------------------------
# BASE DE DATOS PostgreSQL + PostGIS
# -------------------------------------------------------------------------
POSTGRES_DB=digital_twins_db
POSTGRES_USER=dgt_user
POSTGRES_PASSWORD=dgt_pass
POSTGRES_PORT=5437

# -------------------------------------------------------------------------
# SEGURIDAD - JWT
# IMPORTANTE: Cambiar en producción con una clave aleatoria de al menos 32 caracteres
# -------------------------------------------------------------------------
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -------------------------------------------------------------------------
# REGLAS DE NEGOCIO
# -------------------------------------------------------------------------
MAX_SHOPKEEPERS_PER_SELLER=80
MAX_SELLERS_PER_ZONE=10

# -------------------------------------------------------------------------
# CONFIGURACIÓN DE SERVICIOS
# -------------------------------------------------------------------------
# API Gateway
API_GATEWAY_PORT=8080

# Frontend
FRONTEND_PORT=3000

# Microservicios (puertos externos)
MS_AUTH_PORT=8001
MS_GEO_PORT=8003
MS_USER_PORT=8002
MS_REPORT_PORT=8004
MS_PRODUCT_PORT=8005

# -------------------------------------------------------------------------
# DOCKER HUB
# -------------------------------------------------------------------------
DOCKER_REGISTRY=ewdeve/ingsoft
DOCKER_TAG=v1.0.0

# -------------------------------------------------------------------------
# MODO DE DESARROLLO/PRODUCCIÓN
# -------------------------------------------------------------------------
DEBUG=False
ENVIRONMENT=production
